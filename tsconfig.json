{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "incremental": true,
    "preserveWatchOutput": true
  },
  "include": ["**/*.ts"]
}
